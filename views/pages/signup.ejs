<!doctype html>
<html>

<head>

  <head>
    <% include ../partials/login_signup_head.ejs %>
  </head>
</head>

<body>
  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>

          <!-- LOGIN FORM -->
          <form action="/signup" method="post">
            <% include ../partials/login_signup_content.ejs %>

              <button type="submit" class="btn btn-warning btn-lg btn-block">Signup</button>
          </form>

          <div>
            <div>---</div>
              <div>OR</div>
                <div>---</div>
          </div>

          <p>Already have an account? <a href="/login">Login</a></p>

          <hr>

          <% include ../partials/social.ejs %>

    </div>

  </div>
</body>

</html>
